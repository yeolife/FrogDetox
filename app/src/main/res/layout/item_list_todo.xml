<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="todo"
            type="com.ssafy.frogdetox.dto.TodoDto" />
        <variable
            name="clickListener"
            type="com.ssafy.frogdetox.adapter.ItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="6dp"
        android:onClick="@{() -> clickListener.onClick(todo)}">

        <CheckBox
            android:id="@+id/cb_isComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{todo.complete}"
            />
        <LinearLayout
            android:id="@+id/ll_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:paddingStart="3dp"
                android:text="@{todo.content}" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginEnd="50dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>

